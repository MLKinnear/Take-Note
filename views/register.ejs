<div>
    <h2 class="d-flex justify-content-center" style="margin: 5px;">Register</h2>
    <!-- Displays error message if caught on submit -->
    <% if (typeof errorMessage !== 'undefined') { %>
        <div class="alert alert-danger"><%= errorMessage %></div>
    <% } %>
    <div class="d-flex justify-content-center">
        <!-- Form for registration that is posted to DB with hashing and auth API -->
        <form style="min-width: 350px;" action="/api/auth/register" method="POST">
            <div style="margin: 5px;">
                <label for="username">Username</label>
                <input type="text" id="username" class="form-control" name="username" autocomplete="username" required>
            </div>
            <div style="margin: 5px;">
                <label for="email">Email</label>
                <input type="email" id="email" class="form-control" name="email" autocomplete="email" required>
            </div>
            <div style="margin: 5px;">
                <label for="password">Password</label>
                <input type="password" id="password" class="form-control" name="password" autocomplete="new-password" required>
            </div>
            <button style="margin: 5px;" type="submit" class="btn btn-dark">Register</button>
        </form>
    </div>
    <div class="d-flex justify-content-center">
        <!-- Directs user to log in page if already registered -->
        <p>Already have an account?&nbsp;</p><a style="color: black;" href="/login">Login here</a>
    </div>
</div>